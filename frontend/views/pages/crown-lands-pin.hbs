{{#> template}}
  {{#*inline "content"}}
    <main role="main">
      <div class="container">
        <div class="row">
          <h2 class="indented">Search By:</h2>
        </div>
        <div class="row">
          <div id="line"><hr /></div>
        </div>
        <div class="row">
          <form class="form-inline">
            <div class="form-group">
              <div class="col-sm-3 mt-1">
                <label for="crownLandsPin" class="m-2">Crown Lands PIN:</label>
              </div>
              <div class="col-sm-5">
                <input type="text" maxlength="9" class="form-control m-2" id="crownLandsPin">
              </div>
              <div class="col-sm-1 mt-1">
                <label for="folioInput" class="folio-label">Folio:</label>
              </div>
              <div class="col-sm-3">
                <input id="folioInput" name="folioInput" class="form-control m-2 folio-input" />
              </div>
            </div>
          </form>
        </div>
        <div class="row">
          <div class="col-sm-2"></div>
          <div class="col-sm-4">
            <button onclick="back()" id="backButton" class="btn btn-secondary m-2 text-right">Back</button>
            <button onclick="searchCLP()" id="searchButton" class="btn btn-primary m-2 vrbutton"><span id="searchSpinner" class="spinner-border spinner-border-sm d-none"></span><span id="searchBtnTxt">View Search Results</span></button>
          </div>
        </div>
      </div>
    </main>
    <script>
      // only allow numbers in the pin input
      const ele = document.getElementById('crownLandsPin');
      const state = {
          value: ele.value,
      };

      ele.addEventListener('keydown', function (e) {
          const target = e.target;
          state.selectionStart = target.selectionStart;
          state.selectionEnd = target.selectionEnd;
      });

      ele.addEventListener('input', function (e) {
          const target = e.target;

          if (/^[0-9]*$/.test(target.value)) {
              state.value = target.value;
          } else {
              target.value = state.value;
              target.setSelectionRange(state.selectionStart, state.selectionEnd);
          }
      });
    </script>
  {{/inline}}
{{/template}}