{{#> template}}
  {{#*inline "content"}}
    <main role='main'>
      <div class='container'>
        <div class="row">
          <h2 class="indented">Search By:</h2>
        </div>
        <div class="row">
          <div id="line"><hr /></div>
        </div>
        <div class="row">
          <form class="form-horizontal">
            <div class="form-group row">
              <div class="col-xs-1 mt-1 ml-2">
                <label for="parcelId" class="m-2">Parcel ID:</label>
              </div>
              <div class="col-xs-1">
                <input type="text" class="form-control m-2" id="parcelId">
              </div>
            </div>
            <button type="submit" class="btn btn-primary m-2">Download Results</button>
          </form>
        </div>
      </div>
    </main>
  {{/inline}}
{{/template}}