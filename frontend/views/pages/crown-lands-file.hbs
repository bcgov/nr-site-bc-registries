{{#> template}}
  {{#*inline "content"}}
    <main role='main'>
      <div class='container'>
        <div class="row">
          <h2 class="indented">Search By:</h2>
        </div>
        <div class="row">
          <div id="line"><hr /></div>
        </div>
        <div class="row">
          <div class="form-group row">
            <div class="col-xs-1 mt-1 ml-2">
              <label for="crownLandsFile" class="m-2">Crown Lands File #:</p>
            </div>
            <div class="col-xs-1">
              <input type="text" class="form-control m-2" id="crownLandsFile">
            </div>
          </div>
        </div>
        <div class="row">
          <button class="btn btn-primary m-2" onclick="searchBy();">View Search Results</button>
        </div>
      </div>
    </main>
    <script>
        function searchBy() {
            localStorage.setItem('currentSearch','clf');
            localStorage.setItem('searchCriteria', document.getElementById('crownLandsFile').value);
            window.location.href = "/view-search-results";
        }
    </script>
  {{/inline}}
{{/template}}