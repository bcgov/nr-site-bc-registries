{{#> template}}
  {{#*inline "content"}}
    <main role="main">
    <div class="container">
        <div class="row">
        <h2 class="indented">Search By Area:</h2>
        </div>
        <div class="row">
        <div id="line"><hr /></div>
        </div>
        <div class="pill-box mt-3 mb-3" style="width:500px">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
            <a
                class="nav-link active"
                id="pills-postalcode-tab"
                data-toggle="pill"
                href="#pills-postalcode"
                role="tab"
                aria-controls="pills-postalcode"
                aria-selected="true"
            >Postal Code</a>
            </li>
            <li class="nav-item">
            <a
                class="nav-link"
                id="pills-coordinates-tab"
                data-toggle="pill"
                href="#pills-coordinates"
                role="tab"
                aria-controls="pills-coordinates"
                aria-selected="false"
            >Coordinates</a>
            </li>
        </ul>

        <div class="tab-content divheight" id="pills-tabContent">
            <div
            class="tab-pane fade show active"
            id="pills-postalcode"
            role="tabpanel"
            aria-labelledby="pills-postalcode-tab"
            >
            <div class="row mt-2 ml-4">
                <div class="col-xs-2 pt-2">
                <label style="width:150px;text-align:left;float:left;" for="colFormLabel">Postal Code:</label>
                </div>
                <div class="col-xs-4">
                <input type="text" class="form-control" id="postalCodeInput" value="V8V2L6" maxlength="6" />
                </div>
            </div>
            </div>
            <div class="tab-pane fade" id="pills-coordinates" role="tabpanel" aria-labelledby="pills-coordinates-tab">
            <div class="row mt-2 ml-4">
                <div class="col-xs-2 pt-2">
                <label style="width:150px;text-align:left;float:left;" for="latitudeInput">Latitude:</label>
                </div>
                <div class="col-xs-4">
                <input
                    type="text"
                    pattern="\\d*"
                    class="form-control"
                    id="latitudeInput"
                    value="48.42800"
                    min="-180"
                    max="180"
                    step="0.001"
                    maxlength="8"
                />
                </div>
            </div>
            <div class="row mt-2 ml-4">
                <div class="col-xs-2 pt-2">
                <label style="width:150px;text-align:left;float:left;" for="longitudeInput">Longitude:</label>
                </div>
                <div class="col-xs-4">
                <input
                    type="text"
                    pattern="\\d*"
                    class="form-control"
                    id="longitudeInput"
                    value="-123.36500"
                    min="-180"
                    max="180"
                    step="0.001"
                    maxlength="8"
                />
                </div>
            </div>
            </div>
        </div>

        <div class="row">
            <div style="padding:1em">
            <input type="radio" id="sizeSmall" name="circle" value="small" checked />
            <label for="sizeSmall">Small - $51.00</label>
            </div>
            <div style="padding:1em">
            <input type="radio" id="sizeLarge" name="circle" value="large" />
            <label for="sizeLarge">Large - $101.00</label>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-7"></div>
            <div class="col-sm-5">
            <button onclick="back()" id="backButton" class="btn btn-secondary m-2 text-right">Back</button>
            <button onclick="areaSearch()" id="searchButton" class="btn btn-primary m-2">Search</button>
            </div>
        </div>
        </div>
        <div class="row">
        <div class="col-lg-8">
            <div id="map"></div>
        </div>
        </div>
    </div>
    </main>
    <script
    src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js"
    integrity="sha512-BB3hKbKWOc9Ez/TAwyWxNXeoV9c1v6FIeYiBieIWkpLjauysF18NzgR1MBNBXf8/KABdlkX68nAhlwcDFLGPCQ=="
    crossorigin=""
    ></script>
    <script
    src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw-src.js"
    integrity="sha512-czICF/Crp0B7QB13iQZG9bYUpd/P1Ona1NeZN52gYsoVFXIpakDmdOUepMCHCMBIBd9Ei5Mlg8Quy4e504IT5A=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
    ></script>
    <script src="/js/leaflet-src.js"></script>
  {{/inline}}
{{/template}}